<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBA68"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewPopularManga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Popular Manga"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPopularManga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFBA68"
        android:clipToPadding="false"
        android:padding="8dp" />

    <TextView
        android:id="@+id/textViewNewManga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="New Manga"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewNewManga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFBA68"
        android:clipToPadding="false"
        android:padding="8dp" />

    <TextView
        android:id="@+id/textViewTopRankedManga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Trending Manga"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTopRankedManga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFBA68"
        android:clipToPadding="false"
        android:padding="8dp" />

</LinearLayout>
