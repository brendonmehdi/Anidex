<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the SearchView -->
    <solid android:color="#FFA500" /> <!-- Orange color -->

    <!-- Darker orange stroke (outline) -->
    <stroke
        android:color="#824700"
        android:width="2dp" /> <!-- Darker orange color with 2dp width -->

    <!-- Padding for the content inside the background -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

    <!-- Optionally, you can add corner radius for rounded corners -->
    <!-- <corners android:radius="8dp" /> -->
</shape>
